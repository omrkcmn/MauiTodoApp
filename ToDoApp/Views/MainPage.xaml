<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:image="clr-namespace:ToDoApp.Helpers"
             x:Class="ToDoApp.MainPage">
    <AbsoluteLayout>
    <ScrollView>
        <StackLayout Margin="10" WidthRequest="320" HeightRequest="230"
                     HorizontalOptions="CenterAndExpand">
            <Label FontSize="Large" Text="Yapılacaklar Listesi"/>
        </StackLayout>
    </ScrollView>
        <ImageButton
            Source="{image:ImageResourceExtension Source=ToDoApp.Resources.Images.add_light.png}"
            Command="{Binding GoToAddList}"
            BackgroundColor="Transparent"
            Margin="10"
            AbsoluteLayout.LayoutFlags="PositionProportional"  
            AbsoluteLayout.LayoutBounds=".95,.95,80,80"  />
    </AbsoluteLayout>
    

</ContentPage>

